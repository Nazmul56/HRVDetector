<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/colorPrimaryDark"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/ivIconTab"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/tab_icon"
        tools:src="@drawable/ic_message_white_24dp" />

    <TextView
        android:id="@+id/tvTitleTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="@string/messenger_s_image" />

</LinearLayout>